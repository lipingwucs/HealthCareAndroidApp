<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activity.PatientUpdateActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:text="Update a Patient"
        android:textSize="28dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Id"
        android:textSize="14dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvPatientId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/formfield"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="60dp"
        android:hint="Patient Id"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="14dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/tvFirstName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="60dp"
        android:background="@color/formfield"
        android:hint="First Name"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:textSize="14dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/tvLastName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="60dp"
        android:background="@color/formfield"
        android:hint="Last Name"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department"
        android:textSize="14dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/tvDepartment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="60dp"
        android:background="@color/formfield"
        android:hint="Department"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nurse Id"
        android:textSize="14dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/tvNurseId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="60dp"
        android:background="@color/formfield"
        android:hint="Nurse Id"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        android:textSize="14dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/tvRoom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="60dp"
        android:background="@color/formfield"
        android:hint="Room"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnUpdatePatient"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@color/colorSubmit"
            android:onClick="UpdatePatientClick"
            android:text="Update"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnClearPatient"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorCancel"
            android:onClick="CancelUpdatePatient"
            android:text="Cancel"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#F40317"
            android:onClick="DeletePatient"
            android:text="Delete"
            android:textSize="24dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCheckTest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="#bfa"
        android:onClick="CheckTest"
        android:text="Check Tests"
        android:textSize="24dp" />

</LinearLayout>